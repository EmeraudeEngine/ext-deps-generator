+# On macOS, use libtool -static instead of ar for creating static archives.
+# macOS ar creates fat Mach-O archives from cross-arch objects that it then
+# cannot update, breaking cross-compilation (e.g., ARM host -> x86_64 target).
+ifeq ($(shell uname -s),Darwin)
+define archive_template
+$(1):
+	$(if $(quiet),@echo "    [AR] $$@")
+	$(qexec)/usr/bin/libtool -static -o $$@ $$^
+endef
+else
 define archive_template
-# Not using a pattern rule here because we don't want to generate empty
-# archives when they are listed as a dependency in files not responsible
-# for creating them.
 $(1):
 	$(if $(quiet),@echo "    [AR] $$@")
 	$(qexec)$$(AR) $$(ARFLAGS) $$@ $$^
 endef
+endif
 
